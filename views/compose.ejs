<%- include("partial/header"); -%>

<h1> <%= index %> </h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off" id="title">
        
        <label for="post">Post</label>
        <textarea class="form-control" name="postBody" id="post" cols="30" rows="5"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partial/footer"); -%>